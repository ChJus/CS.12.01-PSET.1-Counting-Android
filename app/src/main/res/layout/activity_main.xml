<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/displayText"
        android:layout_width="319dp"
        android:layout_height="116dp"
        android:layout_marginTop="36dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/dropdownSelection"
        android:layout_width="306dp"
        android:layout_height="41dp"
        android:layout_marginTop="408dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/displayText" />

    <TextView
        android:id="@+id/information"
        android:layout_width="409dp"
        android:layout_height="207dp"
        android:layout_marginTop="40dp"
        android:text=""
        android:textAlignment="viewStart"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/displayText" />

    <Button
        android:id="@+id/mostCommonWord"
        android:layout_width="119dp"
        android:layout_height="84dp"
        android:layout_marginBottom="44dp"
        android:text="Most common word"
        app:layout_constraintBottom_toTopOf="@+id/dropdownSelection"
        app:layout_constraintEnd_toStartOf="@+id/topCommonWords"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/information" />

    <Button
        android:id="@+id/topCommonWords"
        android:layout_width="136dp"
        android:layout_height="84dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="44dp"
        android:text="Top 5 common words"
        app:layout_constraintBottom_toTopOf="@+id/dropdownSelection"
        app:layout_constraintEnd_toEndOf="@+id/information" />

</androidx.constraintlayout.widget.ConstraintLayout>